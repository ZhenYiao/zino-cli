[package]
name = "{{project_name}}"
version = "0.1.0"
edition = "2021"


{{#if is_dioxus_ssr}}
[dependencies]
dioxus = "{{dioxus_version}}"
dioxus-router = "{{dioxus_router_version}}"
tracing = "{{tracing_version}}"

[dependencies.dioxus-free-icons]
version = "{{dioxus_free_icons_version}}"
features = [
    "bootstrap",
    "font-awesome-brands",
    "font-awesome-solid",
    "octicons",
]

[dependencies.zino]
version = "{{zino_version}}"
features = ["dioxus-ssr"]

[dependencies.zino-core]
version = "{{zino_core_version}}"
features = ["env-filter", "tls-native"]

[dependencies.zino-dioxus]
version = "{{zino_dioxus_version}}"
{{/if}}

{{#if is_dioxus_desktop}}
[dependencies]
dioxus = "{{dioxus_version}}"
dioxus-router = "{{dioxus_router_version}}"
tracing = "{{tracing_version}}"

[dependencies.dioxus-free-icons]
version = "{{dioxus_free_icons_version}}"
features = [
    "bootstrap",
    "font-awesome-brands",
    "font-awesome-solid",
    "octicons",
]

[dependencies.zino]
version = "{{zino_version}}"
features = ["dioxus-desktop"]

[dependencies.zino-core]
version = "{{zino_core_version}}"
features = ["env-filter", "tls-native"]

[dependencies.zino-dioxus]
version = "{{zino_dioxus_version}}"
{{/if}}
{{#if is_actix}}
[dependencies]
tracing = "{{tracing_version}}"

[dependencies.actix-web]
version = "{{actix_web_version}}"
default-features = false

[dependencies.serde]
version = "{{serde_version}}"
features = ["derive"]

[dependencies.zino]
version = "{{zino_version}}"
features = [
    "actix",
    "i18n",
    "jwt",
    "opa",
    "orm",
]

[dependencies.zino-core]
version = "{{zino_core_version}}"
features = [
    "cookie",
    "env-filter",
    "orm-postgres",
    "view-minijinja",
]

[dependencies.zino-derive]
version = "{{zino_derive_version}}"

[dependencies.zino-model]
version = "{{zino_model_version}}"

{{/if}}
{{#if is_axum}}
[dependencies]
tracing = "{{tracing_version}}"

[dependencies.axum]
version = "{{axum_version}}"
default-features = false

[dependencies.serde]
version = "{{serde_version}}"
features = ["derive"]

[dependencies.zino]
version = "{{zino_version}}"
features = [
    "axum",
    "i18n",
    "jwt",
    "orm",
]

[dependencies.zino-core]
version = "{{zino_core_version}}"
features = [
    "cookie",
    "env-filter",
    "orm-mysql",
    "validator-email",
    "view-tera",
]

[dependencies.zino-derive]
version = "{{zino_derive_version}}"

[dependencies.zino-model]
version = "{{zino_model_version}}"
{{/if}}

{{#if is_ntex}}
[dependencies]
tracing = "{{tracing_version}}"

[dependencies.ntex]
version = "{{ntex_version}}"
default-features = false

[dependencies.serde]
version = "{{serde_version}}"
features = ["derive"]

[dependencies.zino]
version = "{{zino_version}}"
features = [
    "i18n",
    "jwt",
    "ntex",
    "orm",
]

[dependencies.zino-core]
version = "{{zino_core_version}}"
features = [
    "cookie",
    "env-filter",
    "orm-postgres",
    "view-minijinja",
]

[dependencies.zino-derive]
version = "{{zino_derive_version}}"

[dependencies.zino-model]
version = "{{zino_model_version}}"
{{/if}}

{{#if is_minimal}}
[dependencies.zino]
version = "{{zino_version}}"
features = ["axum"]
{{/if}}